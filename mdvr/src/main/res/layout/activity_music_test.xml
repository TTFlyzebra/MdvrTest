<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.MusicTestActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_call"
            android:text="打电话报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_smoke"
            android:text="抽烟报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_close_eye"
            android:text="闭眼报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_yawn"
            android:text="打哈欠报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_distract"
            android:text="分心报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_driver_abnormal"
            android:text="驾驶员异常报警" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_ir_blocking"
            android:text="红外阻断" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_lens_covered"
            android:text="镜头遮挡" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_dms_seatbelt_unfastened"
            android:text="未系安全带" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_adas_ldw"
            android:text="车道偏离" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_adas_fcw"
            android:text="前向碰撞" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_adas_hmw"
            android:text="车距过近" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_adas_pcw"
            android:text="行人碰撞" />

        <Button
            android:visibility="invisible"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mod_adas_pcw"
            android:text="行人碰撞" />
    </LinearLayout>
</LinearLayout>